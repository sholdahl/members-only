<%- include('header'); -%>
<div class="hero-div">
  <div>
    <h1 class="text-center hero-title">Welcome to The Clubhouse</h1>
    <h3 class="text-center hero-subtitle">An Exclusive Community</h3>
  </div>
</div>

<div class="post-contatiner">
  <% if (messages.info) { %>
  <p class="info message"><%= messages.info %></p>
  <% } %> 
  
  <% if (postedMessages.length > 0) { %>

  <% postedMessages.forEach(post => { %>

  <div class="post">
    <h2 class="post-title"><%= post.title %></h2>
    <p class="post-date">
      <%= post.timePostedFormatted %><% if (isMember) {%>
      <span class="post-author">
        â€¢ <%= post.user.firstName %> <%= post.user.lastName %></span
      >
      <% } %>
    </p>

    <p class="post-content"><%= post.message %></p>
    <% if (locals.user) {%> <% if ((String(user._id) === String(post.user._id)) || user.isAdmin) {%>

    <a class="btn-link" href="/<%= post._id %>/delete">
      <button class="btn ch-btn delete-btn">Delete Post</button>
    </a>
    <% }} %>
  </div>

  <% }); %>
  <% } else { %>

  <h3 class="green message text-center">No one has posted yet. Become a member and be the first one to make a post!</h3>

    <% } %>
</div>
<%- include('footer'); -%>
